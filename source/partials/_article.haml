- article_data = article

%article.scroll-item
	.grid-two-single-column.feed{itemscope: '', itemtype: 'http://schema.org/Article', :data => { :file => "/#{article_data[:slug]}/", :target => "article" }}
		.featureInner
			.featureImage
				= link_to "/#{article_data[:slug]}/" do
					- if article_data[:featuredImage].present?
						= image_tag "#{article_data[:featuredImage][:url]}", class: 'feature-image', itemprop: 'image'
			.feature-container
				= link_to "/#{article_data[:slug]}/" do
					.featureContent
						.titleContainer
							%p
								%small
									%span
										= [@category].join
										|
										%span.eta
									read

							%h1{itemprop: 'headline'}
								= article_data[:title]
							%p{itemprop: 'description'}
								= truncate(article_data.body, length: 120)

							.authorImageMicro{itemscope: '', itemtype: 'http://schema.org/Person', itemprop: 'author'}
							
								= image_tag "#{article_data[:author][:profilePhoto][:url]}", class: 'author-image', itemprop: 'image'
							
							.authorNameMicro{itemscope: '', itemtype: 'http://schema.org/Person', itemprop: 'author'}
								%p{itemprop: 'name'}
									= article_data[:author][:name]


